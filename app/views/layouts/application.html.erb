<!DOCTYPE html>
<html>
<head>
  <title><%= @title || "Uniblog" %></title>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse"> <!-- navbar-fixed-top -->
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">WebSiteName</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">Home</a></li>
          <li><a href="#">Page 2</a></li>
          <li><a href="#">Page 3</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% unless user_signed_in? %>
            <li><%= link_to ' Зарегистрироваться', new_user_registration_path, class: "glyphicon glyphicon-user" %></li>
            <li><%= link_to ' Войти', new_user_session_path, class: "glyphicon glyphicon-log-in" %></li>
          <% end %>
          <% if user_signed_in? %>
            <li class="navbar-text">
              Вы вошли как <%= current_user.firstname + ' ' + current_user.lastname + '(' + current_user.email + ')' %>
            </li>
            <li>
              <%= link_to ' Выход', destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-out' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="container">
    <% flash.each do |key, message| %>
      <div class="alert alert-<%= key %>">
        <%= message %>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-2">
      	<h3>Pages block</h3>
      </div>
      <div class="col-md-7">
      	<%= yield %>
      </div>
      <div class="col-md-3">
      	<h3>News block</h3>
      </div>
  </div>


</body>
</html>
